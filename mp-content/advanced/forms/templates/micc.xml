<?xml version="1.0" encoding="UTF-8"?>
<templates>
  <fields>
    <standard><![CDATA[<p>{{field}}<label for='{{field_id}}'>{{label}}</label></p>]]></standard>
    <check_nosmall><![CDATA[<p>{{field}}<label for='{{field_id}}'>{{label}}</label></p>]]></check_nosmall>
    <captcha><![CDATA[<div style="width:86%;border: 1px solid rgb(221, 221, 221); margin: 5px 0pt; padding: 3px 0pt 3px 3px; background-color: rgb(238, 238, 238); width: 86%;">{{field}}<br />Entrez les caractères figurant dans l'image ci-dessus.<br/></div>]]></captcha>
    <required><![CDATA[<p>{{field}}<label for='{{field_id}}'>{{label}} (requis)</label></p>]]></required>
    <nolabel><![CDATA[<p>{{field}}</p>]]></nolabel>
  </fields>
  <fields_on_error>
    <standard><![CDATA[<p>{{field}}<label for='{{field_id}}'>{{label}} <span style='color:red;text-decoration:blink;'>(*)</span></label></p>]]></standard>
    <captcha><![CDATA[<div style="border: 1px solid rgb(221, 221, 221); margin: 5px 0pt; padding: 3px 0pt 3px 3px; background-color: rgb(238, 238, 238); width: 86%;">{{field}}<br />Entrez les caractères figurant dans l'image ci-dessus <span style='color:red;text-decoration:blink;'>(*)</span>.<br/></div>]]></captcha>
    <required><![CDATA[<p>{{field}}<label for='{{field_id}}'>{{label}} (requis) <span style='color:red;text-decoration:blink;'>(*)</span></label></p>]]></required>
    <nolabel><![CDATA[<p>{{field}} <span style='color:red;text-decoration:blink;'>(*)</span></p>]]></nolabel>
  </fields_on_error>
  <groups>
    <radio>
      <before><![CDATA[<!--before--><div>]]></before>
      <first><![CDATA[<!--first--><span>{{field}}</span>]]></first>
      <radio><![CDATA[<span>{{field}}</span>]]></radio>
      <last><![CDATA[<span>{{field}}</span><!--last-->]]></last>
      <after><![CDATA[</div><!--after--><br />]]></after>
    </radio>
    <button>
      <before><![CDATA[<!--before--><div>]]></before>
      <first><![CDATA[<!--first--><span>{{field}}</span>]]></first>
      <button><![CDATA[<span>{{field}}</span>]]></button>
      <last><![CDATA[<span>{{field}}</span><!--last-->]]></last>
      <after><![CDATA[</div><!--after--><br />]]></after>
    </button>
  </groups>
  <composite>
    <captcha_gd1><![CDATA[{{img}}<br />{{input}}]]></captcha_gd1>
    <captcha_gd2><![CDATA[<div style='float:left;'>{{input}}</div>{{img}}]]></captcha_gd2>
    <date>
      <ymd><![CDATA[{{y}}&nbsp;{{m}}&nbsp;{{d}}]]></ymd>
      <dmy><![CDATA[{{d}}&nbsp;{{m}}&nbsp;{{y}}]]></dmy>
      <mdy><![CDATA[{{m}}&nbsp;{{d}}&nbsp;{{y}}]]></mdy>
    </date>
    <time>
      <alone><![CDATA[{{h}}&nbsp;:&nbsp;{{mn}}]]></alone>
      <ampm><![CDATA[{{h}}&nbsp;:&nbsp;{{mn}}&nbsp;{{am}}&nbsp;<label id="{{id_am}}_label" for="{{id_am}}">{{text_am}}</label>&nbsp;{{pm}}&nbsp;<label id="{{id_pm}}_label" for="{{id_pm}}">{{text_pm}}</label>]]></ampm>
      <tz><![CDATA[{{h}}&nbsp;:&nbsp;{{mn}}&nbsp;{{tz}}]]></tz>
      <ampm_tz><![CDATA[{{h}}&nbsp;:&nbsp;{{mn}}&nbsp;{{am}}&nbsp;<label id="{{id_am}}_label" for="{{id_am}}">{{text_am}}</label>&nbsp;{{pm}}&nbsp;<label id="{{id_pm}}_label" for="{{id_pm}}">{{text_pm}}</label>&nbsp;{{tz}}]]></ampm_tz>
    </time>
    <geotag>
      <alone><![CDATA['{{map}}']]></alone>
      <latlng><![CDATA[{{map}}lat:{{lat}}&nbsp;lng:{{lng}}]]></latlng>
      <geocode><![CDATA[{{map}}{{geocode}}&nbsp;{{geocode_button}}]]></geocode>
      <latlng_geocode><![CDATA[{{map}}lat:{{lat}}&nbsp;lng:{{lng}}<br />{{geocode}}&nbsp;{{geocode_button}}]]></latlng_geocode>
    </geotag>
  </composite>
  <message>
    <ok><![CDATA[<p>{{message}}</p>]]></ok>
    <ko><![CDATA[<p><span style='color:red;'>{{message}}</span></p>]]></ko>
  </message>
  <form><![CDATA[<h2>{{label}}</h2><div class='cancel-comment-reply'><p>{{message}}</p></div>{{form}}]]></form>
</templates>