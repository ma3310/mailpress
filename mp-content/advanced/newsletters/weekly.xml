<newsletter id='weekly'>

	<descriptions>
		<admin><![CDATA[<?php _e('Weekly', MP_TXTDOM); ?>]]></admin>
		<blog><![CDATA[<?php  _e('Weekly newsletter', MP_TXTDOM); ?>]]></blog>
	</descriptions>

	<mail>
		<Template>weekly</Template>
		<subject><![CDATA[<?php printf( __('[%1$s] Weekly newsletter', MP_TXTDOM), get_bloginfo('name')); ?>]]></subject>
	</mail>

	<scheduler>
		<id>week</id>
		<args>
			<wday>1</wday> <!-- week day to release the newsletter : [1 > Monday, ..., 6 > Saturday, 0 > Sunday] (default : 1) -->
			<hour>00</hour><!-- hour to release the newsletter : [00 to 23] -->
			<minute>00</minute><!-- + minute to release the newsletter : [00 to 59] -->
		</args>
	</scheduler>

	<processor>
		<id>week-1</id>
		<threshold>MailPress_weekly</threshold><!-- stored on wordpress options table -->
		<wstart>1</wstart><!-- (optional) week day to start the week : [1 > Monday, ..., 6 > Saturday, 0 > Sunday] (default : wordpress start of week, 1) -->
	</processor>

</newsletter>